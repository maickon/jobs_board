#jobs
	.job
		%h2= @job.title
		
		%p= @job.description 
		%p= @job.category.name 
		%p= @job.company 
		%p= @job.url
		%button.btn.btn-default= link_to "Apply for job", @job.url

#links		
	= link_to "Back", root_path, class: "btn btn-sm btn-default" 
	= link_to "Edit", edit_job_path(@job), class: "btn btn-sm btn-default" 
	= link_to "Delete", job_path(@job), method: :delete, data: { confirm: "You are sure?" }, html: { class: "modal fade" }, class: "btn btn-sm btn-default"